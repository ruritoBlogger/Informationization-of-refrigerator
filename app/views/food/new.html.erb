<p>食べ物の新規登録</p>
<%= form_tag("/food/create",{method: :post, multipart: true}) do %>

  <p>食べ物の名前</p>
  <input name="name"><br>

  <p>食べ物の種類</p>
  <!-- 要修正。種類はラジオボタンではなく複数選択を可能にする -->
  <!--<% @modes.each do |mode| %>
    <%= radio_button_tag(:addmode, "#{mode.detail}") %>
    <%= label_tag(:addmode, :"#{mode.detail}") %>
  <% end %>--><br><br>

  <!-- 賞味期限か消費期限かの選択 -->
  <%= radio_button_tag(:limittype1, "賞味期限") %>
  <%= label_tag(:limittype1, "賞味期限") %>
  <%= radio_button_tag(:limittype2, "消費期限") %>
  <%= label_tag(:limittype2, "消費期限") %>

  <p>期限</p>
  <input name="limitYear">年<input name="limitMonth">月<input name="limitDay">日まで<br>

  <!-- 加工食品か生鮮食品かの選択 -->
  <%= radio_button_tag(:foodtype1, "加工食品") %>
  <%= label_tag(:foodtype1, "加工食品") %>
  <%= radio_button_tag(:foodtype2, "生鮮食品") %>
  <%= label_tag(:foodtype2, "生鮮食品") %>

  <p>食べ物の量</p>
  <input name="amount"><br>
  <p>単位</p>
  <!-- 単位の選択 -->
  <%= radio_button_tag(:amounttype1, "g") %>
  <%= label_tag(:amounttype1, "g") %>
  <%= radio_button_tag(:amounttype2, "mL") %>
  <%= label_tag(:amounttype2, "mL") %>
  <%= radio_button_tag(:amounttype3, "人前") %>
  <%= label_tag(:amounttype3, "人前") %>
  <%= radio_button_tag(:amounttype4, "個・本など") %>
  <%= label_tag(:amounttype4, "個・本など") %>


  <p>食べ物の画像</p>
  <input type="file" name="image_name">

  <!-- 登録ボタン -->
  <input type="submit" value="登録">
<% end %>
