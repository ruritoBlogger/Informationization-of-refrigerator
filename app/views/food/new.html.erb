<p>食べ物の新規登録</p>
<% @food = Food.new %>
<%= form_for(@food, :url => {:action => :create, :controller => :food}) do |f| %>

  <%= f.label :食べ物の名前 %>
  <%= f.text_field :name %>
  <p>食べ物の種類</p>
  <!-- 要修正。種類はラジオボタンではなく複数選択を可能にする -->
  <% @modes.each do |mode| %>
  <% end %>
  <!-- 賞味期限か消費期限かの選択 -->
  <%= f.radio_button :limittype, "賞味期限" %>
  <%= f.label :limittype, "賞味期限", value: "賞味期限" %>
  <%= f.radio_button :limittype, "消費期限" %>
  <%= f.label :limittype, "消費期限", value: "消費期限" %><br>

    <%= f.label :limitday, "期限日" %>
    <%= f.date_select :limitday, :default => @food.limitday %><br>

  <!-- 加工食品か生鮮食品かの選択 -->

  <%= f.radio_button :foodtype, "加工食品" %>
  <%= f.label :foodtype, "加工食品", value: "加工食品" %>
  <%= f.radio_button :foodtype, "生鮮食品" %>
  <%= f.label :foodtype, "生鮮食品", value: "生鮮食品" %>



  <%= f.label :食べ物の量 %>
  <%= f.text_field :amount %>
  <p>単位</p>
  <!-- 単位の選択 -->
  <%= f.radio_button :amounttype, "g" %>
  <%= f.label :amounttype, "g", value: "g" %>
  <%= f.radio_button :amounttype, "mL" %>
  <%= f.label :amounttype, "mL", value: "mL" %>
  <%= f.radio_button :amounttype, "人前" %>
  <%= f.label :amounttype, "人前", value: "人前" %>
  <%= f.radio_button :amounttype, "個・本など" %>
  <%= f.label :amounttype, "個・本など", value: "個・本など" %>


  <%= f.label :食べ物の画像 %>
  <%= f.file_field :image_name %>

  <!-- 登録ボタン -->
  <%= f.submit %>
<% end %>
