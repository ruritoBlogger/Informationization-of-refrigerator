<div class="main">
  <div class="row">
    <h3>食べ物の新規登録</h3>
    <% @food = Food.new %>
    <%= form_for(@food, :url => {:action => :create, :controller => :food}) do |f| %>

      <p style="padding-left: 10%">食品名</p>
      <div class="input-field inputtag">
        <%= f.label :食べ物の名前 %>
        <%= f.text_field :name %>
      </div>
      <p style="padding-left: 10%">食べ物の種類</p>
      <!-- 要修正。種類はラジオボタンではなく複数選択を可能にする -->
      <% @modes.each do |mode| %>
      <% end %>
      <div class="inputtag">
        <!-- 賞味期限か消費期限かの選択 -->
        <%= f.radio_button :limittype, "賞味期限" %>
        <%= f.label :limittype, "賞味期限", value: "賞味期限" %>
        <%= f.radio_button :limittype, "消費期限" %>
        <%= f.label :limittype, "消費期限", value: "消費期限" %>
      </div>
      <br>
      <p style="padding-left: 10%">期限日</p>
      <div class="input-field inputtag">
        <%= f.date_select :limitday, :default => @food.limitday, :style => "height:220px;" %><br>
      </div>
      <!-- 加工食品か生鮮食品かの選択 -->
      <p style="padding-left: 10%">食品の種類</p>
      <div class="inputtag">
        <%= f.radio_button :foodtype, "加工食品" %>
        <%= f.label :foodtype, "加工食品", value: "加工食品" %>
        <%= f.radio_button :foodtype, "生鮮食品" %>
        <%= f.label :foodtype, "生鮮食品", value: "生鮮食品" %>
      </div>
      <br>
      <div style="width: 60%; margin:0 auto;">
        <div class="input-field left" style="width: 30%">
          <%= f.label :食べ物の量 %>
          <%= f.text_field :amount %>
        </div>
        <div class="right">
          <p>単位</p>
          <!-- 単位の選択 -->
          <%= f.radio_button :amounttype, "g" %>
          <%= f.label :amounttype, "g", value: "g" %>
          <%= f.radio_button :amounttype, "mL" %>
          <%= f.label :amounttype, "mL", value: "mL" %>
          <%= f.radio_button :amounttype, "人前" %>
          <%= f.label :amounttype, "人前", value: "人前" %>
          <%= f.radio_button :amounttype, "個・本など" %>
          <%= f.label :amounttype, "個・本など", value: "個・本など" %>
        </div>
      </div>
      <br><br><br>
      <div style="text-align: center">
        <div class="input-field">
          <p style="padding-left: 45%">食品の画像</p>
          <%= f.file_field :image_name %>
        </div>
        <br>

        <!-- 登録ボタン -->
        <%= f.submit :class => "btn waves-effect waves-light", :value => "次へ" %>
    <% end %>
    </div>
  </div>
</div>