<!DOCTYPE html>
<html>
<head>
  <title>Informationization</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <!--Compiled and minified CSS -->
  <link rel = "stylesheet" href = "https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css" >
  <!-- Compiled and minified JavaScript -->
  <script src = "https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/js/materialize.min.js"> </script>
</head>
<body>

<header class="black_text">
  <% if !(session[:user_id]) %>
    <!-- ログインしていない時-->
    <!-- headerの左側 -->
    <div class="header_left">
      <div class="header_link">
        <%= link_to("/home/top") do %>
          <div class="header_toplink">

          </div>
        <% end %>
      </div>
    </div>

    <!-- headerの右側-->
    <div class="header_right">
      <div class="header_link">
        <%= link_to("/home/new") do %>
          <div class="header_new">
            新規登録
          </div>
        <% end %>
      </div>
      <div class="header_link">
        <%= link_to("/home/login") do %>
          <div class="header_login">
            ログイン
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <!-- ログインしている時 -->
    <div class="header_left">
      <div class="header_link">
        <%= link_to("/food/main") do %>
          <div class="header_main">
            メインページ
          </div>
        <% end %>
      </div>
      <div class="header_link">
        <%= link_to("/food/new") do %>
          <div class="header_foodNew">
            食品登録
          </div>
        <% end %>
      </div>
      <div class="header_link">
        <%= link_to("/food/index") do %>
          <div class="header_index">
            食品一覧
          </div>
        <% end %>
      </div>
    </div>
    <div class="header_right">
      <div class="header_link">
        <%= link_to("/user/logout", {method: :post}) do %>
          <div class="header_logout">
            ログアウト
          </div>
        <% end %>
      </div>
      <div class="header_link">
        <%= link_to("/main/setting") do %>
          <div class="setting">
            設定
          </div>
        <% end %>
      </div>
      <div class="header_link">
        <%= link_to("/main/profile") do %>
          <div class="profile">
            プロフィール
          </div>
        <% end %>
      </div>
      <div class="header_link">
        <%= link_to("/main/ranking") do %>
          <div class="header_ranking">
            ランキング
          </div>
        <% end %>
      </div>
    </div>

    <!-- current_user -->
    <% user = User.find_by(id: session[:user_id]) %>
    <p>レベル<%= user.level %>現在の経験値<%= user.exp %></p>

  <% end %>

  <!-- ログインに成功したかなどの告知 -->
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% elsif flash[:notice_fail] %>
    <%= flash[:notice_fail] %>
  <% end %>


</header>
<%= yield %>
</body>
</html>
