<div class="row">
  <h4 class="teal-text darken-2" style="margin-left: 2%;">新規登録</h4>
  <% @user = User.new %>
  <%= form_for(@user, :url => {:action => :create, :controller => :user}) do |f| %>
    <div class="col s12">
      <div class="input-field col s6">
        <i class="material-icons prefix">account_circle</i>
        <%= f.label :ユーザー名 %>
        <%= f.text_field :user_name %>
      </div>
      <div class="input-field col s6">
        <i class="material-icons prefix">enhanced_encryption</i>
        <%= f.label :パスワード %>
        <%= f.password_field :password %>
      </div>
      <div style="margin: 7% 0%  0% 46%;">
        <%= f.submit :class => "btn waves-effect waves-light", :value => "新規登録" %></div>
  <% end %>
  </div>
</div>